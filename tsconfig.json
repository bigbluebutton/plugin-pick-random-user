{
    "compilerOptions": {
        "outDir": "./dist-tsc/",
        "noImplicitAny": true,
        "module": "ES2022",
        "target": "ES2022",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": ["src/*"],
    "paths": {
        "*": ["node_modules"]
    },
    "exclude": [
        "node_modules"
    ]
}
